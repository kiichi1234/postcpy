<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <P><%= @user.name %></P>
      <% if @blocked_exists %>
      <%= link_to "ブロック解除", blocks_path(@user), data: { turbo_method: :delete }, class: "btn btn-danger btn-sm" %>
